{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "strictNullChecks": false,
    "importHelpers": true,
    "pretty": true,
    "removeComments": true,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "es2017",
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
  },
  "include": [
    "src"
  ]
}